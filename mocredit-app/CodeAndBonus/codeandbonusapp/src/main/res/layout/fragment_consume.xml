<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/theme_color1"
        android:orientation="vertical" >



            <android.support.v4.view.ViewPager
                android:id="@+id/code_scan_pager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/p10"
                android:layout_weight="3">
            </android.support.v4.view.ViewPager>

        <LinearLayout
            android:background="#ffffff"
            android:paddingRight="@dimen/p80"
            android:paddingLeft="@dimen/p80"
            android:layout_width="match_parent"
            android:layout_height="@dimen/p60"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/code_scan_indicator1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/p20"
                android:padding="@dimen/p10"
                android:background="@drawable/indicator_line"
                android:text="title1"
                android:textColor="@color/theme_color1"
                android:gravity="center"/>
            <TextView
                android:id="@+id/code_scan_indicator2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="@dimen/p10"
                android:background="@drawable/indicator_none"
                android:layout_weight="1"
                android:text="title2"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/p20"
                android:gravity="center"/>
        </LinearLayout>


        <com.yimeihuijin.commonlibrary.widgets.FlashLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:background="#ffffff"
            android:paddingLeft="@dimen/p40"
            android:paddingRight="@dimen/p40"
            android:paddingBottom="@dimen/p10"
            android:id="@+id/code_scan_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_marginTop="@dimen/p10"
                android:orientation="horizontal" >

                <com.yimeihuijin.commonlibrary.widgets.FlashButton
                    android:id="@+id/code_scan_num1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@drawable/code_scan_button_textcolor"
                    android:textSize="@dimen/p40" />


                <com.yimeihuijin.commonlibrary.widgets.FlashButton
                    android:id="@+id/code_scan_num2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@drawable/code_scan_button_textcolor"
                    android:textSize="@dimen/p40" />


                <com.yimeihuijin.commonlibrary.widgets.FlashButton
                    android:id="@+id/code_scan_num3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@drawable/code_scan_button_textcolor"
                    android:textSize="@dimen/p40" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal" >

                <com.yimeihuijin.commonlibrary.widgets.FlashButton
                    android:id="@+id/code_scan_num4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="@drawable/code_scan_button_textcolor"
                    android:textSize="@dimen/p40" />


                <com.yimeihuijin.commonlibrary.widgets.FlashButton
                    android:id="@+id/code_scan_num5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@drawable/code_scan_button_textcolor"
                    android:textSize="@dimen/p40" />


                <com.yimeihuijin.commonlibrary.widgets.FlashButton
                    android:id="@+id/code_scan_num6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:text="6"
                    android:textColor="@drawable/code_scan_button_textcolor"
                    android:textSize="@dimen/p40" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal" >

                <com.yimeihuijin.commonlibrary.widgets.FlashButton
                    android:id="@+id/code_scan_num7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:text="7"
                    android:textColor="@drawable/code_scan_button_textcolor"
                    android:textSize="@dimen/p40" />


                <com.yimeihuijin.commonlibrary.widgets.FlashButton
                    android:id="@+id/code_scan_num8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:text="8"
                    android:textColor="@drawable/code_scan_button_textcolor"
                    android:textSize="@dimen/p40" />


                <com.yimeihuijin.commonlibrary.widgets.FlashButton
                    android:id="@+id/code_scan_num9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:text="9"
                    android:textColor="@drawable/code_scan_button_textcolor"
                    android:textSize="@dimen/p40" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/code_scan_keyboard"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/code_scan_button_keyboard"
                    android:padding="@dimen/p20"
                    android:gravity="center" />


                <com.yimeihuijin.commonlibrary.widgets.FlashButton
                    android:id="@+id/code_scan_num0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@drawable/code_scan_button_textcolor"
                    android:textSize="@dimen/p40" />


                <ImageButton
                    android:id="@+id/code_scan_delete"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/code_scan_button_delete"
                    android:background="@null"
                    android:scaleType="centerInside"
                    android:gravity="center"
                    android:text="删除"
                    android:textColor="#ffffff"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="horizontal" >

                <com.yimeihuijin.commonlibrary.widgets.FlashButton
                    android:id="@+id/code_scan_cancel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:scaleType="centerInside"
                    android:text="撤销"
                    android:textSize="@dimen/p20"
                    android:src="@drawable/code_scan_button_keyboard"
                    android:textColor="@android:color/darker_gray"
                    android:layout_margin="@dimen/p20"
                    android:gravity="center" />


                <ImageButton
                    android:id="@+id/code_scan_consume"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:src="@drawable/code_scan_button_consume"
                    android:text="消费"
                    android:scaleType="centerInside"
                    android:textColor="#ffffff"
                    android:layout_marginRight="@dimen/p20"
                    android:textSize="@dimen/p30" />


                <ImageButton
                    android:id="@+id/code_scan_null"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@null"
                    android:background="@null"
                    android:scaleType="centerInside"
                    android:layout_marginRight="@dimen/p20"
                    android:gravity="center" />
            </LinearLayout>
        </com.yimeihuijin.commonlibrary.widgets.FlashLayout>

    </LinearLayout></RelativeLayout>