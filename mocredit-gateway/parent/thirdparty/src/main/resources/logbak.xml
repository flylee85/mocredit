<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">
	<property name="log_path" value="log" />
	<property name="log_file_name" value="weblog" />
	
	<!-- 控制台 -->
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS} %5level PID %property{PID} thread %thread] line %line %logger#%method %n%msg %xException{full} %n%n</pattern>
		</encoder>
	</appender>
	<!-- 按照每天生成日志文件 -->
	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS} %5level PID %property{PID} thread %thread] line %line %logger#%method %n%msg %xException{full} %n%n</pattern>
		</encoder>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!--日志文件输出的文件名 -->
			<FileNamePattern>${log_path}/${log_file_name}.%d{yyyy-MM-dd}.log </FileNamePattern>
			<!--日志文件保留天数 -->
			<MaxHistory>3000</MaxHistory>
		</rollingPolicy>
		<!--日志文件最大的大小 
		<triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
			<MaxFileSize>1000MB</MaxFileSize>
		</triggeringPolicy>-->
	</appender>
	<logger name="jdbc.connection" level="ERROR" />
	<logger name="jdbc.audit" level="ERROR" />
	<logger name="jdbc.resultset" level="ERROR" />
	<logger name="jdbc.sqlonly" level="ERROR" />
	<logger name="cn.mocredit" level="TRACE" />
	<logger name="org.thymeleaf.TemplateEngine.CONFIG" level="ERROR" />
	<logger name="org.hibernate.SQL" level="TRACE" />

	<root level="INFO">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="FILE" />
	</root>
</configuration>